{
    "name": "ResNet_wire_ce_760_noscale_101_fuse",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLabFuse",
        "args": {
            "backbone": "resnet101",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "LowWiresRGBFlow",
        "args":{
            "data_dir": "/home/labs/waic/rotems/data/elbit/lowire/",
            "batch_size": 8,
            "crop_size": 760,
            "augment": true,
            "shuffle": true,
            "scale": false,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "LowWiresRGBFlow",
        "args":{
            "data_dir": "/home/labs/waic/rotems/data/elbit/lowire/",
            "batch_size": 8,
            "crop_size": 760,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 0,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 800,
        "save_dir": "/home/labs/waic/rotems/code/pytorch_segmentation/saved/",
        "save_period": 1,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "/home/labs/waic/rotems/code/pytorch_segmentation/saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
